<!-- ========================================= -->
<!-- load environment variables -->
<!-- ========================================= -->
<property environment="env"/>
<property name="runtime.home" value="${env.AGSSERVER}" />
<property name="devkit.home" value="${env.AGSDEVKITJAVA}" />
<property name="ant.home" value="${devkit.home}/java/tools/ant"/>
		
<!-- ========================================= -->
<!-- directory mappings -->
<!-- ========================================= -->
<property name="root.dir" location="${basedir}"/>
<basename property="sample.dir" file="${basedir}" />
<property name="src.dir" location="src"/>
<property name="build.dir" location="build"/>
<property name="class.dir" location="${build.dir}/classes"/>
<property name="dist.dir" location="${build.dir}/dist"/>
<property name="extension.dir" location="${build.dir}/extension" />
		
<!-- ========================================= -->
<!-- jar file mapping -->
<!-- ========================================= -->
<property name="arcobjects.jar" location="${runtime.home}/framework/lib/arcobjects.jar"/>
<property name="jsr173_1.0_api.jar" location="${runtime.home}/framework/lib/shared/jsr173_1.0_api.jar"/>
<property name="activation.jar" location="${runtime.home}/framework/lib/shared/activation.jar"/>